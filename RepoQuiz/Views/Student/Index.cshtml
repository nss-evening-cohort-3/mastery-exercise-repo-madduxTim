@using RepoQuiz.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    table {
        border-collapse: collapse;
        margin-left: 25%;
        width:50%;
        text-align: center;
    }
    th {
        text-align: center;
    }
    tr:nth-child(even) {
        background-color: #ffd800;
    }
</style>

<h3 style="margin-left:25%; margin-bottom:5%">Yowza! Students With Presidential-Sounding Names</h3>
<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Major</th>
    </tr>
    @{ foreach (var student in ViewBag.Students)
            {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Major</td>
            </tr>
        }
    }
</table>

